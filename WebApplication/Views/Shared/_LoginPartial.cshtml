@using WebApplication3.Models;

@if (Request.IsAuthenticated)
{
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Hello " + User.Identity.Name + "!", "UserProfilePage", "Home", routeValues: null, htmlAttributes: new { target = "_blank" })
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
                }
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href=@Url.Action("Register", "Account", null, null)><span class="glyphicon glyphicon-user"></span> Register</a></li>
                    <li><a href=@Url.Action("Login", "Account", null, null)><span class="glyphicon glyphicon-log-in"></span> Log in</a></li>
                </ul>
            }
